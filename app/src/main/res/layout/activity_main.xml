<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#368749"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/exe_time_result"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/card_bg"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="Oswald"
        android:textColor="#184723"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/exe_time_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/exe_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check execution time"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/button_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/mem_access_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check memory access time"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/button_bg"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/exe_time_result"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/mem_access_result"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/card_bg"
        android:textSize="20sp"
        android:textAlignment="center"
        android:fontFamily="Oswald"
        android:textColor="#184723"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/mem_access_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/hardware_config_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Show Hardware Configuration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mem_access_result" />


</androidx.constraintlayout.widget.ConstraintLayout>
